<?xml version="1.0" encoding="UTF-8"?>
<Addin 
  name="DCReleaseTools Addins"
  id="DCReleaseTools"
  version="1.0.0"
  namespace="DCReleaseTools"
  author="Di cute"
  copyright="Di cute"
  description="Di's Addins"
  category="IDE extensions"
  flags="None">
    <Runtime>
        <Import assembly="DCReleaseTools.dll" />
    </Runtime>
    
	<Extension
        path="/MonoDevelop/Ide/DisplayBindings">
        <DisplayBinding
            class="MonoDevelop.MacDev.XcodeInterfaceBuilderDisplayBinding"
            id="InterfaceBuilderBeforeIPhoneDesinger"
            insertbefore="IPhoneDesigner" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/DisplayBindings">
        <DisplayBinding
            class="MonoDevelop.MacDev.XcodeInterfaceBuilderDisplayBinding"
            id="InterfaceBuilderBeforeIOSDesinger"
            insertbefore="iOSDesigner" />
    </Extension>
    
    <!-- XCode designer tools -->

    <Extension path="/MonoDevelop/Ide/Commands/Edit">
        <Command id="DCReleaseTools.Commands.HockeyCommands.Build" 
                _label="Build app to Hockey" 
                _description="" 
                defaultHandler="DCReleaseTools.Handlers.HockeyBuildHandler" />
        <Command id="DCReleaseTools.Commands.HockeyCommands.Authorization" 
                _label="Hockey Auth" 
                _description="" 
                defaultHandler="DCReleaseTools.Handlers.HockeyAuthHandler" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/ContextMenu/ProjectPad">
        <Condition id="ItemType" value="Project">
            <CommandItem id="DCReleaseTools.Commands.HockeyCommands.Build" insertafter="MonoDevelop.Ide.Commands.ProjectCommands.Clean" insertbefore="MonoDevelop.Ide.Commands.ProjectCommands.Unload" />
        </Condition>
        <Condition id="ItemType" value="Project|Solution">
            <CommandItem id="DCReleaseTools.Commands.HockeyCommands.Authorization" insertafter="MonoDevelop.Ide.Commands.ProjectCommands.Clean" insertbefore="MonoDevelop.Ide.Commands.ProjectCommands.Unload" />
        </Condition>
    </Extension>

    <!-- HOCKEYAPP Commands -->
    
     <Extension path="/MonoDevelop/Ide/Commands/Edit">
        <Command id="DCReleaseTools.Commands.BindingCommands.GenarateControl" 
                _label="Generate control wrapper" 
                _description="" 
                defaultHandler="DCReleaseTools.Handlers.GenarateControlHandler" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/ContextMenu/ProjectPad">
        <Condition id="ItemType" value="Project">
            <CommandItem id="DCReleaseTools.Commands.BindingCommands.GenarateControl"/>
        </Condition>
    </Extension>
</Addin>
